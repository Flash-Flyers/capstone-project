@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Flash Flyerz!</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- nav bar -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbar_style box-shadow mb-3">
            <div class="container">
                <a class="navbar_text" id="home_title" asp-area="" asp-controller="Home" asp-action="Index">Flash Flyerz!</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="navbar_text" asp-area="" asp-controller="EventCreation" asp-action="Index">Submit Event</a>
                            <a class="navbar_text" asp-area="" asp-controller="PastEvents" asp-action="Index">Old Events</a>
                            @*<a class="navbar_text" asp-area="" asp-controller="EventCreation" asp-action="Testing">Create Quick Event</a>*@
                            @if (signInManager.IsSignedIn(User))
                            {
                                <a class="navbar_text" asp-area="" asp-controller="AppAdmin" asp-action="Index">Admin</a>
                                <a class="navbar_text" asp-area="" asp-controller="Admin" asp-action="ListRoles">Roles</a>
                            }
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="navbar_text" asp-area="" asp-controller="FavEvents" asp-action="Index">Favorites</a>
                                <a class="navbar_text" asp-area="" asp-controller="MyEvents" asp-action="Index">My Events</a>
                            }
                        </li>
                    </ul>
                </div> <!-- end of navbar-collapse -->
            </div> <!-- end of container -->
        </nav>
    </header>
    
    <div class="container">
        <!-- main body renders the body of each view -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- footer details -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Flash Flyerz!
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
